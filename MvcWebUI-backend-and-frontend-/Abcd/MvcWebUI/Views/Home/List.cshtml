@using MvcWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
          @Html.Action("GetCategories", "Home")
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>      There is no product in this category.
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-check-square"></i>       <strong>@Model.Count()</strong> products found.
                </div>
            }
            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
