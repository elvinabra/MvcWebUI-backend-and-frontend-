@model IEnumerable<MvcWebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "index";
}

<div class="container">
    <div class="row">
        <h2>Order Details</h2>
        <hr />

        <table class="table table-bordered table-stipped">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Total</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.Total</td>
                        <td>@item.OrderState</td>
                        <td>
                        @Html.ActionLink("Details", "Details", new {id= item.Id}, new { @class="btn btn-primary"})
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

